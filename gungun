<body>

<h2>ğŸ”« íƒ€ì„ ì–´íƒ ìŠˆíŒ…</h2>
<div id="info">
    â±ï¸ <span id="time">30</span>s |
    ğŸ”« <span id="ammo">10</span> |
    ğŸ¯ <span id="score">0</span>
    <span id="reload"></span>
</div>

<canvas id="game" width="700" height="450"></canvas>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");

let targets = [];
let bullets = [];

let score = 0;
let timeLeft = 30;

const maxAmmo = 10;
let ammo = maxAmmo;
let reloading = false;

// ì´ ìœ„ì¹˜
const gun = {
    x: canvas.width / 2,
    y: canvas.height - 40
};

// í‘œì  ìƒì„±
function spawnTarget() {
    targets.push({
        x: Math.random() * 650 + 25,
        y: Math.random() * 250 + 25,
        r: 20
    });
}

// í´ë¦­ â†’ ë°œì‚¬
canvas.addEventListener("click", e => {
    if (ammo <= 0 || reloading || timeLeft <= 0) return;

    ammo--;
    updateUI();

    const rect = canvas.getBoundingClientRect();
    const tx = e.clientX - rect.left;
    const ty = e.clientY - rect.top;

    bullets.push({
        x: gun.x,
        y: gun.y,
        tx, ty
    });

    if (ammo === 0) reload();
});

// ì¬ì¥ì „
function reload() {
    reloading = true;
    document.getElementById("reload").innerText = " | ğŸ”„ ì¥ì „ ì¤‘...";
    setTimeout(() => {
        ammo = maxAmmo;
        reloading = false;
        document.getElementById("reload").innerText = "";
        updateUI();
    }, 1500);
}

// ê±°ë¦¬ ê³„ì‚°
function dist(a, b, c, d) {
    return Math.hypot(a - c, b - d);
}

// ì´ ê·¸ë¦¬ê¸°
function drawGun() {
    ctx.fillStyle = "gray";
    // ëª¸í†µ
    ctx.fillRect(gun.x - 40, gun.y, 80, 20);
    // ì´êµ¬
    ctx.fillRect(gun.x - 5, gun.y - 15, 10, 15);
    // ì†ì¡ì´
    ctx.fillRect(gun.x + 20, gun.y + 20, 15, 25);

    // ì¥ì „ ì• ë‹ˆë©”ì´ì…˜ (íƒ„ì°½)
    ctx.fillStyle = reloading ? "orange" : "white";
    ctx.fillRect(gun.x - 30, gun.y + 25, ammo * 4, 8);
}

// ì—…ë°ì´íŠ¸
function update() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    // í‘œì 
    for (let t of targets) {
        ctx.beginPath();
        ctx.arc(t.x, t.y, t.r, 0, Math.PI * 2);
        ctx.fillStyle = "lime";
        ctx.fill();
    }

    // ì´ì•Œ
    for (let i = bullets.length - 1; i >= 0; i--) {
        let b = bullets[i];
        b.x += (b.tx - b.x) * 0.25;
        b.y += (b.ty - b.y) * 0.25;

        ctx.fillStyle = "yellow";
        ctx.beginPath();
        ctx.arc(b.x, b.y, 4, 0, Math.PI * 2);
        ctx.fill();

        // ì¶©ëŒ
        for (let j = targets.length - 1; j >= 0; j--) {
            if (dist(b.x, b.y, targets[j].x, targets[j].y) < targets[j].r) {
                targets.splice(j, 1);
                bullets.splice(i, 1);
                score++;
                updateUI();
                break;
            }
        }
    }

    // ì´
    drawGun();

    if (timeLeft > 0) requestAnimationFrame(update);
    else gameOver();
}

// UI ì—…ë°ì´íŠ¸
function updateUI() {
    document.getElementById("ammo").innerText = ammo;
    document.getElementById("score").innerText = score;
}

// íƒ€ì´ë¨¸
setInterval(() => {
    if (timeLeft > 0) {
        timeLeft--;
        document.getElementById("time").innerText = timeLeft;
    }
}, 1000);

// í‘œì  ìƒì„±
setInterval(() => {
    if (timeLeft > 0) spawnTarget();
}, 800);

// ê²Œì„ ì¢…ë£Œ
function gameOver() {
    ctx.fillStyle = "red";
    ctx.font = "40px Arial";
    ctx.fillText("GAME OVER", 220, 220);
    ctx.font = "20px Arial";
    ctx.fillText("ìµœì¢… ì ìˆ˜: " + score, 280, 260);
}

update();
</script>

</body>
</html>
